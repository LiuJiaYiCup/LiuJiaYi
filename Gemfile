source 'https://rubygems.org'

gem 'jekyll'
gem 'jekyll-theme-simple-texture'

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-redirect-from'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
end

group :development, :test do
  gem 'cucumber'
  gem 'minitest'
  gem 'rake'
  gem 'selenium-webdriver'
  gem 'wdm', '>= 0.1.0' if Gem.win_platform?
end
